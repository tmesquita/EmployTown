.options.right
  - if current_user.resume_file_name.eql? nil
    = link_to 'Please Upload a Resume', edit_seekers_user_path(current_user)
  -else
    %p
      = link_to "View My Resume", @user.resume.url


%h1= @user.first_name + ' ' + @user.last_name
.left-column.left

  = image_tag @user.photo.url(:regular)
  
  #info-container
    %p
      = @user.email
    %p
      = "employtown.com/" + @user.user_url

.right-column.left
  .right-column-container
    .right= link_to 'Edit', seekers_edit_info_path(current_user)
    %p
      %span.title About Me:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = @user.about_me
    %p
      %span.title Experience:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = @user.experience