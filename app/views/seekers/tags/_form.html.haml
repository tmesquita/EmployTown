= form_for [:seekers, @tag] do |f|
  -if @tag.errors.any?
    %div{:id="error_explanation"}
      %h2= pluralize(@tag.errors.count, "error")
        prohibited this tag from being saved:
      %ul
        - @tag.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :user_id
    = f.text_field : user_id
  .field
    = f.label :tag
    = f.text_field :tag
  .actions
    = f.submit
