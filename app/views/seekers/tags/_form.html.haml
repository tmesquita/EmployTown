= form_for [:seekers, @tag] do |f|
  -if @tag.errors.any?
    %div{:id => "error_explanation"}
      %h2= pluralize(@tag.errors.count, "error") + "prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg

  %p
    = f.label :user_id
    = f.text_field :user_id
  
  %p
    = f.label :tag
    = f.text_field :tag
  
  %p
    = f.submit