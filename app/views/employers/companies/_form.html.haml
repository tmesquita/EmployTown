= form_for [:employers, @company] do |f|
  -if @company.errors.any? 
    %div{:id => "error_explanation"}
      %h2= pluralize(@company.errors.count, "error") + "prohibited this company from being saved:"

      %ul
        - @company.errors.full_messages.each do |msg|
          %li= msg

  .input-container
    .left
      .input
        = f.label :name
        %br	
        = f.text_field :name  
    
      .input
        = f.label :company_website
        %br
        = f.text_field :url 
      .input
        = f.label :company_description
        %br
        = f.text_area :description, :size => "44x22" 
      

      .submit
        = f.submit  

    .right
      .input
        = f.label :why_would_you_want_to_work_for_my_company?
        %br
        = f.text_area :why_work_for, :size => "44x5"

      .input
        = f.label :what_i_am_looking_for
        %br
        = f.text_area :looking_for, :size => "44x5"
    
      - if !action_name.eql? 'new'
        .input
          - if !@company.has_facebook_enabled?
            = link_to 'Add a Facebook URL', employers_enable_facebook_path
          - else
            = f.label :facebook_address
            = link_to '(Disable)', employers_disable_facebook_path
            %br
            = f.text_field :facebook
        .input
          - if !@company.has_twitter_enabled?
            = link_to 'Add a Twitter URL', employers_enable_twitter_path
          - else
            = f.label :twitter_address
            = link_to '(Disable)', employers_disable_twitter_path
            %br
            = f.text_field :twitter
        .input
          - if !@company.has_blog_enabled?
            = link_to 'Add a Blog URL', employers_enable_blog_path
          - else
            = f.label :blog_address
            = link_to '(Disable)', employers_disable_blog_path
            %br
            = f.text_field :blog_address
  .clear