.result
  .info.left
    .arrow.arrow-down.left.hide
    .arrow.arrow-right.left
    %span.name.bootstrapTooltip{rel: 'tooltip', 'data-delay' => 800, 'data-title' => "Click to view #{user}'s profile"}= link_to user, user_path(user)
    - unless user.facebook.blank?
      = link_to image_tag('facebook-logo-small.png', class: 'social'), "http://www.facebook.com/#{user.facebook}", target: '_blank'
    - unless user.twitter.blank?
      = link_to image_tag('twitter-bird-dark-bgs-small.png', class: 'social'), "http://www.twitter.com/#{user.twitter}", target: '_blank'
    - unless user.blog_address.blank?
      = link_to image_tag('blog-icon-black-20.png', class: 'social'), "http://#{user.blog_address}", target: '_blank'
    - if current_user.company.nil? 
      %span.bid.disabled.bootstrapTooltip{rel: 'tooltip', 'data-title' => "Add your company to bid on #{user}", 'data-delay' => 800}= link_to 'Send a bid', '#', class: 'button', style: 'cursor: not-allowed'
    -  else
      %span.bid= link_to 'Send a bid', new_employers_bid_path, class: 'button'
  .thumb.right
    = image_tag user.photo.url(:thumb)
  .detailsBox.hide
    .photo.right
      = image_tag user.photo.url(:small)
    %table.left
      %tr
        %td.border-bottom.no-left-padding{ width: '180px' } Email
        %td.border{ width: '1px' }
        %td= mail_to user.contact_email, user.contact_email
      %tr
        %td.border-bottom.no-left-padding Phone
        %td.border
        %td= number_to_phone user.contact_phone, area_code: true
      %tr
        %td.border-bottom.no-left-padding Resume
        %td.border
        %td
          - if user.has_resume?
            = link_to 'View my resume', user.resume.url
          - else
            No resume uploaded
      %tr
        %td.border-bottom.no-left-padding About Me
        %td.border
        %td
          = simple_format truncate(user.about_me, length: 200)
          - if user.about_me.length > 200
            = link_to 'Read more', user_path(user), class: 'small-link'
      %tr
        %td.no-left-padding Ideal Role
        %td.border
        %td
          = simple_format truncate(user.ideal_role, length: 200)
          - if user.ideal_role.length > 200
            = link_to 'Read more', user_path(user), class: 'small-link'
  .clear