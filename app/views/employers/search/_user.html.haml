.result
  .info.left
    .arrow.arrow-down.left.hide
    .arrow.arrow-right.left
    %span.name.bootstrapTooltip{rel: 'tooltip', 'data-delay' => 500, 'data-title' => "Click to view #{user}'s profile"}= link_to user, "/#{user.user_url}"
  .thumb.right= image_tag user.photo.url(:thumb)
  .detailsBox.hide
    .photo.right
      = image_tag user.photo.url(:small)
    %table.left
      %tr
        %td.border-bottom.no-left-padding{ width: '180px' } Email
        %td.border{ width: '1px' }
        %td= mail_to user.contact_email, user.contact_email
      %tr
        %td.border-bottom.no-left-padding Phone
        %td.border
        %td= number_to_phone user.contact_phone, area_code: true
      %tr
        %td.border-bottom.no-left-padding About Me
        %td.border
        %td= simple_format user.about_me
      %tr
        %td.no-left-padding Ideal Role
        %td.border
        %td= simple_format user.ideal_role
  .clear