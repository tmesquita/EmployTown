- content_for :title do
  Uninterested Bids

= render :partial => 'layouts/flash', :locals => {:flash => flash}

.bid_header
  %h2.left Bids with no interest
  %ul#bid_menu.right
    %li.border
      = link_to 'Bids Awaiting Response', employers_bids_path
      - if @not_responded_bids_count > 0
        %span.notification= @not_responded_bids_count
    |
    %li
      = link_to 'Interested Bids', interested_employers_bids_path
      - if @interested_bids_count > 0
        %span.notification= @interested_bids_count
  .clear
-if @bids.count > 0
  = render @bids
  %br
- else
  %h3 You have no bids to display

= will_paginate @bids