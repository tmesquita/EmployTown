- content_for :title do
  Interested Bids

= render 'layouts/flash', :flash => flash

.bid_header
  %h2.left Bids with interest
  %ul#bid_menu.right
    %li.border
      = link_to 'Bids Awaiting Response', employers_bids_path
      - if @not_responded_bids_count > 0
        %span.notification= @not_responded_bids_count
    |
    %li
      = link_to 'Not Interested Bids', not_interested_employers_bids_path
      - if @not_interested_bids_count > 0
        %span.notification= @not_interested_bids_count
  .clear
-if @bids.count > 0
  = render @bids
- else
  %h3 You have no bids to display

= will_paginate @bids