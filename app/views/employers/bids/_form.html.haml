= form_for [:employers, @bid], :url => {:action => 'create'} do |f|
  = render 'layouts/flash', flash: flash
  .input.no-caption
    %label
      Job Title
    = f.text_field :job_title
  .input.no-caption
    %label
      Salary Offered
    = f.text_field :salary
  .input.no-caption.select
    %label
      Salary Term
    = f.select :salary_term, options_for_select([['Year', 'year'], ['Hour', 'hour']])
  .input.no-caption
    %label
      Contact Email
    = f.text_field :contact_email
  .input
    %label
      Job Description
    = f.text_area :job_description, :size => "30x8"
  .submit
    = f.submit 'Submit Bid', class: 'button'
  .clear

  

