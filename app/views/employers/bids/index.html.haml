- content_for :title do
  Bids

= render 'layouts/flash', flash: flash

.filters.left
  .filter-title Filter Bids
  %ul
    = filter_link 'All', employers_bids_path, nil
    = filter_link 'Sent', employers_bids_path, 'sent'
    = filter_link 'Interested', employers_bids_path, 'interested'
    = filter_link 'Not Interested', employers_bids_path, 'declined'

.bids.right
  - unless @bids.count > 0
    .no-bids There are no bids to display
  = render @bids