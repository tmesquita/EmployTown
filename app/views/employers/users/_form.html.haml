- form_for [:employers, @user], :html => { :multipart => true } do |f|
  %p
    - if @user.errors.any?
      - for message in @user.errors.full_messages
        = message
  
  %p
    = f.label :email
    = f.text_field :email
  
  %p
    = f.label :password
    = f.password_field :password
  
  %p
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  
  %p
    = f.label :first_name
    = f.text_field :first_name
  
  %p
    = f.label :last_name
    = f.text_field :last_name
    
  %p
    = f.label :photo
    = f.file_field :photo
  
  %p
    = f.label :user_url
    = f.text_field :user_url

  %p
    = f.submit
