= form_for [:employers, @bidding] do |f|  
  - if @bidding.errors.any?  
    %div{:id => "error_explanation"}
      %h2= pluralize(@bidding.errors.count, "error") + "prohibited this bidding from being saved:"
      %ul
        - @bidding.errors.full_messages.each do |msg|  
          %li= msg 
  -puts @seeker_id
  -puts ("HELLO")
  %p
    = f.label :comment   
    = f.text_field :comment    
   
  %p
    = f.submit  

