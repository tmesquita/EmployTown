= form_for [:employers, @bidding] do |f|  
  - if @bidding.errors.any?  
    %div{:id => "error_explanation"}
      %h2= pluralize(@bidding.errors.count, "error") + "prohibited this bidding from being saved:"
      %ul
        - @bidding.errors.full_messages.each do |msg|  
          %li= msg 

  %p
    = f.label :employer_id   
    = f.text_field :employer_id  
   
  %p
    = f.label :seeker_id   
    = f.text_field :seeker_id  
   
  %p
    = f.label :date   
    = f.date_select :date  
   
  %p
    = f.label :interested   
    = f.text_field :interested  
   
  %p
    = f.submit  

