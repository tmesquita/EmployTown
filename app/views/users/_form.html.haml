- form_for @user do |f|
  - if @user.errors.any?
    .error
      = image_tag 'Exclamation.png'
      %strong &nbsp;Please fix the following errors
      %br
      %br
      - for message in @user.errors.full_messages
        %li.message= message
        
  .input-container
    .left
      .input
        = f.label :email
        %br
        = f.text_field :email
      
      .input
        = f.label :password
        %br
        = f.password_field :password
      
      .input
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation
      .submit
        = f.submit "Sign up!"
    
    .right
      .input
        = f.label :first_name
        %br
        = f.text_field :first_name
      
      .input
        = f.label :last_name
        %br
        = f.text_field :last_name
      
      .input
        -#= f.label :profile_type
        = f.radio_button :seeking, "seeker", {:checked => true}
        Job Seeker&nbsp;&nbsp;&nbsp;
        = f.radio_button :seeking, "employer"
        Employer
    .clear
  .clear
  
