.bid
  .info.left
    .arrow.arrow-down.left.hide
    .arrow.arrow-right.left
    = bid.status
    .name.left.bootstrapTooltip{rel: 'tooltip', 'data-delay' => 800, 'data-title' => "Click to view #{bid.employer}'s company website"}= bid.company_website
  .image.right= image_tag bid.employer.company.logo.url(:thumb)
  = bid.decline_button('main right')
  = bid.accept_button('main right')
  .detailsBox.hide
    .photo.right
      = image_tag bid.employer.company.logo.url(:small)
    %table
      %tr
        %td.border-bottom.no-left-padding{ width: '180px' } Job Title
        %td.border{ width: '1px' }
        %td= bid.job_title
      %tr
        %td.border-bottom.no-left-padding Salary Offered
        %td.border
        %td= bid.salary
      %tr
        %td.border-bottom.no-left-padding Job Description
        %td.border
        %td
          = simple_format truncate(bid.job_description, length: 200)
          - if bid.job_description.length > 200
            = link_to 'Read More', '#', class: 'small-link read-more', 'data-bid-id' => bid.id
      %tr
        %td.border-bottom.no-left-padding Company Contact
        %td.border
        %td= bid.contact_name
      %tr
        %td.no-left-padding Contact Email
        %td.border
        %td= mail_to bid.contact_email, bid.contact_email, subject: 'Your Employtown Bid'
    = bid.accept_button
    = bid.decline_button
  .clear