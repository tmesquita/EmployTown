.bid
  .info.left
    .arrow.arrow-down.left.hide
    .arrow.arrow-right.left
    = bid.status
    = bid.show_company
  .image.right= image_tag bid.employer.company.logo.url(:thumb)
  = bid.decline_button('main right')
  = bid.accept_button('main right')
  .detailsBox.hide
    .photo.right
      = image_tag bid.employer.company.logo.url(:small)
    %table
      %tr
        %td.border-bottom.no-left-padding{ width: '180px' } Job Title
        %td.border{ width: '1px' }
        %td.content= bid.job_title
      %tr
        %td.border-bottom.no-left-padding Salary Offered
        %td.border
        %td.content= bid.salary
      %tr
        %td.border-bottom.no-left-padding Job Description
        %td.border
        %td.content= bid.job_description
      %tr
        %td.border-bottom.no-left-padding Company Contact
        %td.border
        %td.content= bid.contact_name
      %tr
        %td.no-left-padding Contact Email
        %td.border
        %td.content= mail_to bid.contact_email, bid.contact_email, subject: 'Your Employtown Bid'
    = bid.accept_button
    = bid.decline_button
  .clear