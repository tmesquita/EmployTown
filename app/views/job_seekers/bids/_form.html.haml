- form_for [:seekers, @bidding] do |f|

  %p
    = f.label :employer_id
    = f.text_field :employer_id
       
  %p
    = f.label :seeker_id
    = f.text_field :seeker_id
   
  %p
    = f.label :date
    = f.date_select :date
  
  %p
    = f.label :comment
    = f.text_field :comment
     
  %p
    = f.label :interested
    = f.text_field :interested
   
  %p
    = f.submit

